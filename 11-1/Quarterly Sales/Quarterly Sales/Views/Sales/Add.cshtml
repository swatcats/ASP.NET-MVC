@model Sale
@{
    ViewData["Title"] = "Add Sales";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Quarter">Quarter</label>
        <input asp-for="Quarter" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EmployeeId">Employee</label>
        <select asp-for="EmployeeId" class="form-control">
            @foreach (var Employee in ViewBag.Employees)
            {
                <option value="@Employee.EmployeeId">@Employee.FirstName @Employee.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>
